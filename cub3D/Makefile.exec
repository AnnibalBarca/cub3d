NAME = cub3d

CC = cc
CFLAGS = -Wall -Wextra -Werror -MMD -MP -I includes -I libft -g3
OBJ_DIR = src/obj
OBJ = $(addprefix $(OBJ_DIR)/, $(SRC_ALL:.c=.o))
DEPS = $(OBJ:.o=.d)
LDFLAGS = -L$(LIBFT_DIR) -lft -lm
LIBFT_DIR = ./libft
LIBFT = $(LIBFT_DIR)/libft.a
SRC_DIR = src

RST= \033[0m
GRE= \033[1;32m
GREEN=\033[0;32m
BLUE=\033[38;2;64;224;208m
RED=\033[0;91m
WHITE=\033[2;37m
NC=\033[0m

